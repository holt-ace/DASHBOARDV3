{
  "name": "dashboard-backend",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "babel src -d dist",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js",
    "test:watch": "npm run test -- --watch",
    "test:coverage": "npm run test -- --coverage",
    "test:llm": "jest test/integration/langchain-processor.test.js --verbose --runInBand",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format": "prettier --write \"**/*.{js,ts,json,md}\"",
    "db:migrate": "node scripts/db/migrate.js",
    "db:seed": "node scripts/db/seed.js",
    "db:backup": "node scripts/db/backup.js",
    "monitor:perf": "node scripts/monitor-performance.js",
    "monitor:logs": "node scripts/monitor-logs.js",
    "docs:generate": "jsdoc -c jsdoc.config.json"
  },
  "dependencies": {
    "@langchain/community": "0.3.28",
    "@langchain/core": "0.3.37",
    "@langchain/openai": "0.4.2",
    "@pdf-lib/fontkit": "^1.1.1",
    "ajv": "^8.17.1",
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.2",
    "joi": "^17.13.3",
    "langchain": "0.3.15",
    "mongoose": "^8.9.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "openai": "^4.82.0",
    "pdf-lib": "^1.17.1",
    "pdfjs-dist": "^4.10.38",
    "uuid": "^11.0.5",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "jest": "^29.5.2",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
